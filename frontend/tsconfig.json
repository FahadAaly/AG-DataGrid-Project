{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ESNext"],
    "types": ["@types/node"],   
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}